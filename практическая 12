	int ex;//выход из пунктов меню >> правила

	cout << "Приветствуем вас!";
	cout << "Меню:"<<endl;
	cout << "- [1] Начать игру"<<endl;
	cout << "- [2] Настройки"<<endl;
	cout << "- [3] Правила"<<endl;
	cout << "- [0] Выйти"<<endl;
	cin >> a;

	if (a == 3) {
		cout << "- Игрок получает очки за правильный ответ на вопрос;"<<endl;
