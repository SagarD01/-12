# include <iostream>
using namespace std;

int main() {
    
	setlocale(0, "");


	int a;  //выбрать пункт меню
	int exit;  //выход из пунктов меню (правила, настройки, начать игру)
	int life;  // жизни игрока
	int kol;  // кол-во верных ответов
	int b;  //Выбор настроек
	int UserName;  // Имя пользователя
	int numq;  // кол-во вопросов
	int color;  // Цвет интерфейса


	cout << "Приветствуем вас!"<<endl;
	cout << "Меню:" << endl;
	cout << "- [1] Начать игру" << endl;
	cout << "- [2] Настройки" << endl;
	cout << "- [3] Правила" << endl;
	cout << "- [0] Выйти" << endl;
	cin >> a;



	while (true) {



		switch (a) {

		case 0:


			cout << "Вы вышли из игры";
			
			return 0;
			
			break;


		case 3:

			cout << "Правила" << endl;
			cout << "- Игрок получает очки за правильный ответ на вопрос;" << endl;
			cout << "- Игрок проходит дальше за правильный ответ;" << endl;
			cout << "- Игрок теряет жизнь при неправильном ответе;" << endl;
			cout << "[0] Выйти"<<endl;
			cin >> exit;


			system("cls");


			if (exit == 0) {

				cout << "Приветствуем вас!" << endl;
				cout << "Меню:" << endl;
				cout << "- [1] Начать игру" << endl;
				cout << "- [2] Настройки" << endl;
				cout << "- [3] Правила" << endl;
				cout << "- [0] Выйти" << endl;
				cin >> a;
			}

			break;



		case 2:

			cout << "Настройки" << endl;
			cout << "- [1]Редактирование имя игрока;" << endl;
			cout << "- [2]Редактирование вопросов в игре. Можно заменить на 8 - 10 - 12" << endl;
			cout << "- [3]Редактировать цвет интерфейса (это могут быть: вопросы, ответы, меню, цифры, что угодно)" << endl;
			cout << "- [0]Выход" << endl;
			cin >> b;


			system("cls");
			

			switch (b) {

				case 1:
				
					cout << "Вводи свой никнейм: ";
					cin >> UserName;
					
					break;

				case 2:
				
					cout << "Вводи сколько вопросов хочешь: ";
					cin >> numq;
					
					break;

				case 3:
				
					cout << "Какой цвет хочешь? "<<endl<< "[5]Лиловый, [7]Белый : ";
					cin >> color;
					
					if (color==5) {
						system("color 5");
					}
					
					else if (color == 7) {
						system("color 7");
					}
					
					break;

				case 0:
				
					cout << "Приветствуем вас!"<<endl;
					cout << "Меню:" << endl;
					cout << "- [1] Начать игру" << endl;
					cout << "- [2] Настройки" << endl;
					cout << "- [3] Правила" << endl;
					cout << "- [0] Выйти" << endl;
					cin >> a;
					
					break;
			}

			break;


			if (exit == 0) {

				cout << "Приветствуем вас!"<<endl;
				cout << "Меню:" << endl;
				cout << "- [1] Начать игру" << endl;
				cout << "- [2] Настройки" << endl;
				cout << "- [3] Правила" << endl;
				cout << "- [0] Выйти" << endl;
				cin >> a;
			}

		}


	}
}
